<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBE6F3"
    tools:context="com.example.medicalproject.NewMedicamento">

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="36dp"
        android:contentDescription="Nome"
        android:ems="10"
        android:hint="Nome"
        android:inputType="text"
        android:textColor="#3A2753"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nome" />

    <EditText
        android:id="@+id/editTextDose"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:contentDescription="Dose"
        android:ems="10"
        android:inputType="text"
        android:hint="Dose"
        android:textColor="#3A2753"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNome"
        tools:text="Dose" />

    <EditText
        android:id="@+id/editTextInicio"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:contentDescription="Horário Inicial"
        android:ems="10"
        android:inputType="time"
        android:hint="Horário Inicial"
        android:textColor="#3A2753"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDose"
        tools:text="Horário Inicial" />

    <EditText
        android:id="@+id/editTextHoras"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:contentDescription="Intervalo (horas)"
        android:ems="10"
        android:inputType="number"
        android:hint="Intervalo (horas)"
        android:textColor="#3A2753"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextInicio"
        tools:text="Intervalo (horas)" />

    <EditText
        android:id="@+id/editTextDesc"
        android:layout_width="339dp"
        android:layout_height="151dp"
        android:layout_marginBottom="140dp"
        android:contentDescription="Descrição (opcional)"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="Descrição (opcional)"
        android:textColor="#3A2753"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextHoras"
        app:layout_constraintVertical_bias="0.927"
        tools:text="Descrição (opcional)" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="99dp"
        android:layout_height="56dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="32dp"
        android:text="Salvar"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonCor"
        android:layout_width="128dp"
        android:layout_height="140dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="68dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/editTextDose"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cor" />

</androidx.constraintlayout.widget.ConstraintLayout>